<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.MenuController">
   <children>
      <Label layoutX="221.0" layoutY="83.0" text="Nine Men's Morris">
         <font>
            <Font name="Arial Bold" size="36.0" />
         </font>
      </Label>
      <Button fx:id="startLocalButton" alignment="CENTER" layoutX="300.0" layoutY="211.0" mnemonicParsing="false" onAction="#startLocalSession" prefHeight="30.0" prefWidth="150.0" text="Start Local Game">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="startOnlineButton" alignment="CENTER" contentDisplay="CENTER" layoutX="300.0" layoutY="305.0" mnemonicParsing="false" onAction="#startOnlineSession" prefHeight="30.0" prefWidth="150.0" text="Start Online Game">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Button fx:id="howToPlayButton" alignment="CENTER" contentDisplay="CENTER" layoutX="300.0" layoutY="403.0" mnemonicParsing="false" onAction="#howToPlay" prefHeight="30.0" prefWidth="150.0" text="How To Play">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
